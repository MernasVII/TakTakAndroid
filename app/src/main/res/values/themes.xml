<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TakTakAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangeToBG</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurfaceVariant">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/darkGrey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusColor</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>
    </style>

    <!-- Switch. -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>
    <style name="MyFabStyle" parent="Widget.Material3.FloatingActionButton.Small.Primary">
        <item name="shapeAppearanceOverlay">@style/MyFabShapeAppearance</item>
    </style>

    <style name="MyFabShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorSurfaceVariant">@color/white</item>
    </style>
    <!-- EditTexts -->

    <style name="OutlinedBoxRed" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/red_stroke</item>
        <item name="android:textColorHint">@color/red_stroke</item>
        <item name="hintTextColor">@color/red</item>
    </style>

    <style name="OutlinedBoxBGOrange" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/bg_orange_stroke</item>
        <item name="android:textColorHint">@color/bg_orange_stroke</item>
        <item name="hintTextColor">@color/BGToOrange</item>
    </style>

    <style name="OutlinedBoxBGLB" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/bg_lb_stroke</item>
        <item name="android:textColorHint">@color/bg_lb_stroke</item>
        <item name="hintTextColor">@color/BGToLB</item>
    </style>

    <style name="OutlinedBoxOrangeLB" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/orange_lb_stroke</item>
        <item name="android:textColorHint">@color/orange_lb_stroke</item>
        <item name="hintTextColor">@color/orangeToLB</item>
    </style>

    <!-- BottomSheet. -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="backgroundTintMode">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>

    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <!-- Splash. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/yellowToBG</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/yellowToBG</item>
        <item name="colorPrimaryDark">@color/yellowToBG</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_logo
        </item>
        <item name="android:statusBarColor">@color/yellowToBG</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/orange</item>
    </style>

    <style name="CustomDateDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/orange</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/orange</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/grey</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/grey</item>    <!--days of the week-->
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkGrey</item>
        <item name="colorControlActivated">@color/orangeToYellow</item>
    </style>

</resources>