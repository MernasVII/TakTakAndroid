<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.common.mapView.MapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/tlGuide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_corners_white_bg"
            android:backgroundTint="#96000000"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1- Hold to set a marker"
                android:textColor="#96ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        style="@style/MyFabStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/orangeToBG"
        android:layout_marginEnd="16dp"
        app:tint="@color/white"
        android:contentDescription="TODO"
        android:src="@drawable/ic_info2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green"
        app:borderWidth="0dp"
        android:contentDescription="TODO"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_save"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>