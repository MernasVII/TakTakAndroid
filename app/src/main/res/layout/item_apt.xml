<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:gravity="center"
    android:background="@drawable/list_item_bg"
    android:layout_marginTop="10dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp">

    <!-- sp or customer profile pic-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/defpdp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_spInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/darkGrey"
            android:textSize="14dp" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/grey"
                android:textSize="14dp" />
            <!-- ic_accepted or ic_pending--> <!--hide for archived-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_aptState"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_accepted"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:id="@+id/tv_timeLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/grey"
            android:textSize="12dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--hide for archived-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <!-- if current user=customer-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_item_bg"
            android:backgroundTint="@color/red"
            android:text="@string/cancel"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular" />
        <!-- if current user=sp-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_postpone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_item_bg"
            android:backgroundTint="@color/red"
            android:visibility="gone"
            android:text="@string/postpone"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>