<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowToBG"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".uis.common.emailForgotPwd.EmailForgotPwdActivity">


        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellowToBG"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forgotpwd" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_Email"
                style="@style/OutlinedBoxBGOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                app:errorIconTint="@color/red"
                app:errorTextColor="@color/red"
                app:boxStrokeErrorColor="@color/red"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxCornerRadiusTopEnd="24dp"
                app:boxCornerRadiusTopStart="24dp"
                app:boxStrokeWidth="1dp"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/BGToOrange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/grey"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendEmail"
                android:backgroundTint="@color/BGToOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/poppins_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textSize="20dp"
                app:cornerRadius="24dp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="50dp">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                android:padding="50dp"
                android:backgroundTint="#66425968"
                android:background="@drawable/rounded_corners_white_bg"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/orange" />
        </LinearLayout>






</FrameLayout>


