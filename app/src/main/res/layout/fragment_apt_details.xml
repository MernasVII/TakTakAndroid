<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.common.AptDetailsFragment"
    android:background="@color/whiteToBG">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- TOP LAYOUT -->
        <include
            android:id="@+id/profile_layout"
            layout="@layout/layout_profile" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- BOTTOM LAYOUT -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/date_and_time"
                    android:textColor="@color/BGToLB"
                    android:textSize="14dp" />

                <!-- DATETIME -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="@color/BGToLB"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <!-- LOCATION -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/location"
                    android:textColor="@color/BGToLB"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="@color/BGToLB"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <!-- TOS -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/type_of_service"
                    android:textColor="@color/BGToLB"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="@color/BGToLB"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <!-- DESCRIPTION -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/description_of_request"
                    android:textColor="@color/BGToLB"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="@color/BGToLB"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:maxLines="5"
                    android:lines="2"
                    android:minLines="2"
                    android:singleLine="false"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <!-- SP VIEWS -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_timeLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/red"
                        android:textSize="14dp" />
                    <!-- VISIBLE WHEN CUSTOMER -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="@color/red"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                    <!-- VISIBLE WHEN SP ACCPETED -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_postpone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="@color/red"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/postpone"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:visibility="gone" />
                    <!-- VISIBLE WHEN SP PENDING -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_pending_sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_accept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="3dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/btn_bg"
                            android:backgroundTint="@color/green"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/accept"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_decline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="30dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/btn_bg"
                            android:backgroundTint="@color/red"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/decline"
                            android:textColor="@color/white"
                            android:textSize="16dp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- VISIBLE WHEN CUSTOMER AND APT IS DONE -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="@color/LBToOrange"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/rate_pay"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <!-- VISIBLE WHEN SP AND APT IS NOW OR IN PROGRESS (IM HERE/WORK IS DONE) -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="@color/LBToOrange"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/here"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spinkit_view"
                style="@style/SpinKitView.Large.Circle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/orangeToYellow"/>
        </FrameLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>