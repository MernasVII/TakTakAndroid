<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowToBG"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".uis.common.registerTwo.RegisterTwoActivity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/yellowToBG"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_ui_image" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/joinUS"
            android:textColor="@color/orange"
            android:textSize="32dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/create_an_account"
            android:textColor="@color/orange"
            android:textSize="18dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_Speciality"
            style="@style/OutlinedBoxOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="true"
            app:startIconDrawable="@drawable/ic_speciality"
            app:startIconTint="@color/orange">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Speciality"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/speciality"
                android:inputType="textPersonName"
                android:textColor="@color/grey"
                android:textSize="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_cin"
            style="@style/OutlinedBoxOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxStrokeWidth="1dp"
            android:focusable="false"
            android:clickable="true"
            app:hintEnabled="true"
            app:startIconDrawable="@drawable/ic_camera"
            app:startIconTint="@color/orange">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/identity"
                android:focusable="false"
                android:clickable="true"
                android:inputType="textPersonName"
                android:textColor="@color/grey"
                android:textSize="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/types_of_services"
            android:textColor="@color/orange"
            android:textSize="16dp"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="1"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInstallation"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/installation"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRepair"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/repair"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMaintenance"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/maintenance"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/availability_per_week"
            android:textColor="@color/orange"
            android:textSize="16dp"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMonday"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/monday"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTuesday"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/tuesday"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWednesday"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_rowWeight="1"

                android:layout_column="2"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/wednesday"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThursday"
                android:layout_height="60dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/thursday"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFriday"
                android:layout_height="60dp"
                android:layout_row="1"

                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/friday"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaturday"
                android:layout_height="60dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:letterSpacing="0"
                android:text="@string/saturday"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="16dp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="40dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textSize="20dp"
            app:cornerRadius="24dp" />


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            android:padding="50dp"
            android:backgroundTint="#66425968"
            android:background="@drawable/rounded_corners_white_bg"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/orange" />
    </LinearLayout>

</FrameLayout>



</ScrollView>