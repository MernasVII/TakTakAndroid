<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowToBG"
    tools:context=".uis.common.registerTwo.RegisterTwoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellowToBG"
        android:orientation="vertical"

        android:overScrollMode="never"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/yellowToBG"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_ui_image" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="@string/joinUS"
                    android:textColor="@color/BGToOrange"
                    android:textSize="32dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/create_an_account"
                    android:textColor="@color/BGToOrange"
                    android:textSize="18dp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_Speciality"
                    style="@style/OutlinedBoxBGOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="24dp"
                    app:boxCornerRadiusBottomStart="24dp"
                    app:boxCornerRadiusTopEnd="24dp"
                    app:boxCornerRadiusTopStart="24dp"
                    app:boxStrokeErrorColor="@color/red"
                    app:boxStrokeWidth="1dp"
                    app:errorIconTint="@color/red"
                    app:errorTextColor="@color/red"
                    app:hintEnabled="true"
                    app:startIconDrawable="@drawable/ic_speciality"
                    app:startIconTint="@color/BGToOrange">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_Speciality"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/speciality"
                        android:inputType="textPersonName"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_cin"
                    style="@style/OutlinedBoxBGOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorIconTint="@color/red"
                    app:errorTextColor="@color/red"
                    app:boxStrokeErrorColor="@color/red"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="25dp"
                    android:autoSizeTextType="uniform"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="24dp"
                    app:boxCornerRadiusBottomStart="24dp"
                    app:boxCornerRadiusTopEnd="24dp"
                    app:boxCornerRadiusTopStart="24dp"
                    app:boxStrokeWidth="1dp"
                    app:hintEnabled="true"
                    app:startIconDrawable="@drawable/ic_camera"
                    app:startIconTint="@color/BGToOrange">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_cin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoSizeTextType="uniform"
                        android:clickable="true"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/identity"
                        android:inputType="textPersonName"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/types_of_services"
                    android:textColor="@color/BGToOrange"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:rowCount="1"
                    android:useDefaultMargins="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnInstallation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/installation"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRepair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/repair"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMaintenance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:singleLine="true"
                        android:text="@string/maintenance"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                </GridLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/availability_per_week"
                    android:textColor="@color/BGToOrange"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/monday"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/tuesday"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"

                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/wednesday"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/thursday"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/friday"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/white"
                        android:letterSpacing="0"
                        android:text="@string/saturday"
                        android:textAllCaps="false"
                        android:textColor="@color/BGToOrange"
                        android:textSize="16dp"
                        app:cornerRadius="24dp"
                        app:strokeColor="@color/BGToOrange"
                        app:strokeWidth="1dp" />

                </GridLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegSp"
                    android:backgroundTint="@color/BGToOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/poppins_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:letterSpacing="0"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    app:cornerRadius="24dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="50dp"
                android:visibility="gone">

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/spin_kit"
                    style="@style/SpinKitView.Large.Circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_corners_white_bg"
                    android:backgroundTint="#66425968"
                    android:padding="50dp"
                    app:SpinKit_Color="@color/orange" />
            </LinearLayout>

        </FrameLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>