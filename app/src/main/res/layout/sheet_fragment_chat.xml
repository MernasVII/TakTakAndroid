<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sheet_background"
    android:orientation="vertical"
    tools:context=".uis.common.sheets.ChatSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sheet_background"
        android:backgroundTint="@color/BGToLB"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:overScrollMode="never"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        tools:listitem="@layout/sent_msg_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded_corners_white_bg_stroke"
            android:orientation="horizontal"
            android:padding="5dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_content"
                android:layout_width="0dp"
                style="@style/OutlinedBoxBGLB"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="6"
                app:boxStrokeWidth="0dp"
                android:layout_marginBottom="3dp"
                app:boxCornerRadiusTopStart="24dp"
                app:boxCornerRadiusBottomStart="24dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_MsgContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/enter_your_message_here"
                    android:inputType="textMultiLine"
                    android:textColor="@color/grey"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/iv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corners_white_bg"
                android:backgroundTint="@color/BGToLB"
                android:padding="10dp"
                android:src="@drawable/ic_send"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>