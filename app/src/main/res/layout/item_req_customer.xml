<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/list_item_bg"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Installation"
        android:textColor="@color/darkGreyToWhite"
        android:textSize="16dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="0.6"
            android:fontFamily="@font/poppins_regular"
            android:text="Installation of an air conditioner"
            android:textColor="@color/greyToYellow"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_bidCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/round_item_bg"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:text="Bids: 13"
            android:textColor="@color/whiteToBG"
            android:textSize="12dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_timeLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="20/11/2022 in Ariana"
        android:textColor="@color/greyToYellow"
        android:textSize="12dp" />
</androidx.appcompat.widget.LinearLayoutCompat>