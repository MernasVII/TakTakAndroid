<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tn.esprit.taktakandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.TakTakAndroid"
        tools:targetApi="31">
        <activity
            android:name=".uis.common.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".uis.common.ResetPwdActivity"
            android:exported="false" />
        <activity
            android:name=".uis.common.RegisterTwoActivity"
            android:exported="false" />
        <activity
            android:name=".uis.common.RegisterOneActivity"
            android:exported="false" />
        <activity
            android:name=".uis.common.OTPActivity"
            android:exported="false" />
        <activity
            android:name=".uis.common.emailForgotPwd.EmailForgotPwdActivity"
            android:exported="false" />
        <activity
            android:name=".uis.common.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".uis.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>